/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

def rseqc_modules = params.rnaseq_rseqc_modules ? params.rnaseq_rseqc_modules.split(',').collect{ it.trim().toLowerCase() } : []

//
// General configuration options
//

process {
    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'SAMPLESHEET_CHECK_RNASEQ' {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'CUSTOM_DUMPSOFTWAREVERSIONS' {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }
}

//
// Genome preparation options
//

process {
    withName: 'GUNZIP_.*|MAKE_TRANSCRIPTS_FASTA' {
        publishDir = [
            path: { "${params.outdir}/genome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'UNTAR_.*' {
        ext.args2 = '--no-same-owner'
    }

    withName: 'UNTAR_.*|STAR_GENOMEGENERATE|STAR_GENOMEGENERATE_IGENOMES|HISAT2_BUILD' {
        publishDir = [
            path: { "${params.outdir}/genome/index" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'GFFREAD' {
        ext.args   = '--keep-exon-attrs -F -T'
        publishDir = [
            path: { "${params.outdir}/genome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'HISAT2_EXTRACTSPLICESITES' {
        publishDir = [
            path: { "${params.outdir}/genome/index" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'SALMON_INDEX' {
        ext.args   = params.gencode ? '--gencode' : ''
        publishDir = [
            path: { "${params.outdir}/genome/index" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'RSEM_PREPAREREFERENCE_GENOME' {
        ext.args   = '--star'
        publishDir = [
            path: { "${params.outdir}/genome/index" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'GTF2BED' {
        publishDir = [
            path: { "${params.outdir}/genome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'CAT_ADDITIONAL_FASTA|PREPROCESS_TRANSCRIPTS_FASTA_GENCODE' {
        publishDir = [
            path: { "${params.outdir}/genome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'GTF_GENE_FILTER' {
        publishDir = [
            path: { "${params.outdir}/genome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'CUSTOM_GETCHROMSIZES' {
        publishDir = [
            path: { "${params.outdir}/genome" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.save_reference
        ]
    }

    withName: 'CAT_FASTQ' {
        publishDir = [
            path: { "${params.outdir}/fastq" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: params.rnaseq_save_merged_fastq
        ]
    }
}

if (!params.rnaseq_skip_bbsplit && params.rnaseq_bbsplit_fasta_list) {
    process {
        withName: '.*:PREPARE_GENOME:BBMAP_BBSPLIT' {
            ext.args   = 'build=1'
            publishDir = [
                path: { "${params.outdir}/genome/index" },
                mode: params.publish_dir_mode,
                saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
                enabled: params.save_reference
            ]
        }
    }
}

//
// Read subsampling and strand inferring options
//

process {
    withName: 'FQ_SUBSAMPLE' {
        ext.args   = '--record-count 1000000 --seed 1'
        ext.prefix = { "${meta.id}.subsampled" }
        publishDir = [
            path: { "${params.outdir}/sample_fastq/fastq" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename },
            enabled: false
        ]
    }

    withName: '.*:FASTQ_SUBSAMPLE_FQ_SALMON:SALMON_QUANT' {
        ext.args   = '--skipQuant'
        publishDir = [
            path: { "${params.outdir}/sample_fastq/salmon" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') || filename.endsWith('_meta_info.json') ? null : filename },
            enabled: false
        ]
    }
}

//
// Read QC and trimming options
//

if (!(params.rnaseq_skip_fastqc || params.rnaseq_skip_qc)) {
    if (params.rnaseq_trimmer == 'trimgalore') {
        process {
            withName: '.*:FASTQ_FASTQC_UMITOOLS_TRIMGALORE:FASTQC' {
                ext.args   = '--quiet'
            }
        }
    }

    if (params.rnaseq_trimmer == 'fastp') {
        process {
            withName: '.*:FASTQ_FASTQC_UMITOOLS_FASTP:FASTQC_RAW' {
                ext.args   = '--quiet'
            }

            withName: '.*:FASTQ_FASTQC_UMITOOLS_FASTP:FASTQC_TRIM' {
                ext.args   = '--quiet'
                publishDir = [
                    path: { "${params.outdir}/${params.rnaseq_trimmer}/fastqc" },
                    mode: params.publish_dir_mode,
                    saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
                ]
            }
        }
    }
}

if (!params.rnaseq_skip_trimming) {
    if (params.rnaseq_trimmer == 'trimgalore') {
        process {
            withName: '.*:FASTQ_FASTQC_UMITOOLS_TRIMGALORE:TRIMGALORE' {
                ext.args   = {
                    [
                        "--fastqc_args '-t ${task.cpus}'",
                        params.rnaseq_extra_trimgalore_args ? params.rnaseq_extra_trimgalore_args.split("\\s(?=--)") : ''
                    ].flatten().unique(false).join(' ').trim()
                }
                publishDir = [
                    [
                        path: { "${params.outdir}/${params.rnaseq_trimmer}/fastqc" },
                        mode: params.publish_dir_mode,
                        pattern: "*.{html,zip}"
                    ],
                    [
                        path: { "${params.outdir}/${params.rnaseq_trimmer}" },
                        mode: params.publish_dir_mode,
                        pattern: "*.fq.gz",
                        enabled: params.rnaseq_save_trimmed
                    ],
                    [
                        path: { "${params.outdir}/${params.rnaseq_trimmer}" },
                        mode: params.publish_dir_mode,
                        pattern: "*.txt"
                    ]
                ]
            }
        }
    }

    if (params.rnaseq_trimmer == 'fastp') {
        process {
            withName: '.*:FASTQ_FASTQC_UMITOOLS_FASTP:FASTP' {
                ext.args   = params.rnaseq_extra_fastp_args ?: ''
                publishDir = [
                    [
                        path: { "${params.outdir}/${params.rnaseq_trimmer}" },
                        mode: params.publish_dir_mode,
                        pattern: "*.{json,html}"
                    ],
                    [
                        path: { "${params.outdir}/${params.rnaseq_trimmer}/log" },
                        mode: params.publish_dir_mode,
                        pattern: "*.log"
                    ],
                    [
                        path: { "${params.outdir}/${params.rnaseq_trimmer}" },
                        mode: params.publish_dir_mode,
                        pattern: "*.fastq.gz",
                        enabled: params.rnaseq_save_trimmed
                    ]
                ]
            }
        }
    }
}

if (params.rnaseq_with_umi && !params.rnaseq_skip_umi_extract) {
    process {
        withName: 'UMITOOLS_EXTRACT' {
            ext.args   = [
                    params.rnaseq_umitools_extract_method ? "--extract-method=${params.rnaseq_umitools_extract_method}" : '',
                    params.rnaseq_umitools_bc_pattern     ? "--bc-pattern='${params.rnaseq_umitools_bc_pattern}'" : '',
                    params.rnaseq_umitools_bc_pattern2    ? "--bc-pattern2='${params.rnaseq_umitools_bc_pattern2}'" : '',
                    params.rnaseq_umitools_umi_separator  ? "--umi-separator='${params.rnaseq_umitools_umi_separator}'" : ''
            ].join(' ').trim()
            publishDir = [
                [
                    path: { "${params.outdir}/umitools" },
                    mode: params.publish_dir_mode,
                    pattern: "*.log"
                ],
                [
                    path: { "${params.outdir}/umitools" },
                    mode: params.publish_dir_mode,
                    pattern: "*.fastq.gz",
                    enabled: params.rnaseq_save_umi_intermeds
                ]
            ]
        }
    }
}

//
// Contaminant removal options
//

if (!params.rnaseq_skip_bbsplit) {
    process {
        withName: 'BBMAP_BBSPLIT' {
            ext.args   = 'build=1 ambiguous2=all maxindel=150000'
            publishDir = [
                [
                    path: { "${params.outdir}/bbsplit" },
                    mode: params.publish_dir_mode,
                    pattern: '*.txt'
                ],
                [
                    path: { "${params.outdir}/bbsplit" },
                    mode: params.publish_dir_mode,
                    pattern: '*.fastq.gz',
                    enabled: params.rnaseq_save_bbsplit_reads
                ]
            ]
        }
    }
}

if (params.rnaseq_remove_ribo_rna) {
    process {
        withName: 'SORTMERNA' {
            ext.args   = '--num_alignments 1 -v'
            publishDir = [
                [
                    path: { "${params.outdir}/sortmerna" },
                    mode: params.publish_dir_mode,
                    pattern: "*.log"
                ],
                [
                    path: { "${params.outdir}/sortmerna" },
                    mode: params.publish_dir_mode,
                    pattern: "*.fastq.gz",
                    enabled: params.rnaseq_save_non_ribo_reads
                ]
            ]
        }
    }
}

//
// General alignment options
//

process {
    withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:.*:BAM_SORT_STATS_SAMTOOLS:BAM_STATS_SAMTOOLS:.*' {
        ext.prefix = { "${meta.id}.sorted.bam" }
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}/samtools_stats" },
            mode: params.publish_dir_mode,
            pattern: "*.{stats,flagstat,idxstats}"
        ]
    }

    withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:.*:BAM_SORT_STATS_SAMTOOLS:SAMTOOLS_SORT' {
        ext.prefix = { "${meta.id}.sorted" }
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}" },
            mode: params.publish_dir_mode,
            pattern: "*.bam",
            enabled: ( ['star_salmon','hisat2'].contains(params.rnaseq_aligner) &&
                ( params.rnaseq_save_align_intermeds ||
                    ( !params.rnaseq_with_umi && params.rnaseq_skip_markduplicates )
                )
            ) || params.rnaseq_save_align_intermeds || params.rnaseq_skip_markduplicates
        ]
    }

    withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:.*:BAM_SORT_STATS_SAMTOOLS:SAMTOOLS_INDEX' {
        ext.args   = params.rnaseq_bam_csi_index ? '-c' : ''
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}" },
            mode: params.publish_dir_mode,
            pattern: "*.{bai,csi}",
            enabled: ( ['star_salmon','hisat2'].contains(params.rnaseq_aligner) &&
                ( params.rnaseq_save_align_intermeds ||
                    ( !params.rnaseq_with_umi && params.rnaseq_skip_markduplicates )
                )
            ) || params.rnaseq_save_align_intermeds || params.rnaseq_skip_markduplicates
        ]
    }
}

if (!params.rnaseq_skip_markduplicates && !params.rnaseq_with_umi) {
    process {
        withName: '.*:BAM_MARKDUPLICATES_PICARD:PICARD_MARKDUPLICATES' {
            ext.args   = '--ASSUME_SORTED true --REMOVE_DUPLICATES false --VALIDATION_STRINGENCY LENIENT --TMP_DIR tmp'
            ext.prefix = { "${meta.id}.markdup.sorted" }
            publishDir = [
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}/picard_metrics" },
                    mode: params.publish_dir_mode,
                    pattern: '*metrics.txt'
                ],
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}" },
                    mode: params.publish_dir_mode,
                    pattern: '*.bam'
                ]
            ]
        }

        withName: '.*:BAM_MARKDUPLICATES_PICARD:SAMTOOLS_INDEX' {
            ext.args   = params.rnaseq_bam_csi_index ? '-c' : ''
            ext.prefix = { "${meta.id}.markdup.sorted" }
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}" },
                mode: params.publish_dir_mode,
                pattern: '*.{bai,csi}'
            ]
        }

        withName: '.*:BAM_MARKDUPLICATES_PICARD:BAM_STATS_SAMTOOLS:.*' {
            ext.prefix = { "${meta.id}.markdup.sorted.bam" }
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}/samtools_stats" },
                mode: params.publish_dir_mode,
                pattern: '*.{stats,flagstat,idxstats}'
            ]
        }
    }
}

if (params.rnaseq_with_umi && ['star_salmon','hisat2'].contains(params.rnaseq_aligner)) {
    process {
        withName: '.*:BAM_DEDUP_STATS_SAMTOOLS_UMITOOLS_GENOME:UMITOOLS_DEDUP' {
            ext.args   = { [
                meta.single_end                 ? '' : '--unpaired-reads=discard --chimeric-pairs=discard',
                params.rnaseq_umitools_grouping_method ? "--method='${params.rnaseq_umitools_grouping_method}'" : '',
                params.rnaseq_umitools_umi_separator   ? "--umi-separator='${params.rnaseq_umitools_umi_separator}'" : ''
            ].join(' ').trim() }
            ext.prefix = { "${meta.id}.umi_dedup.sorted" }
            publishDir = [
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}/umitools" },
                    mode: params.publish_dir_mode,
                    pattern: '*.tsv'
                ],
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}" },
                    mode: params.publish_dir_mode,
                    pattern: '*.bam',
                    enabled: (
                        params.rnaseq_save_align_intermeds ||
                        params.rnaseq_with_umi ||
                        params.rnaseq_save_umi_intermeds
                    )
                ]
            ]
        }

        withName: '.*:BAM_DEDUP_STATS_SAMTOOLS_UMITOOLS_GENOME:SAMTOOLS_INDEX' {
            ext.args   = params.rnaseq_bam_csi_index ? '-c' : ''
            ext.prefix = { "${meta.id}.umi_dedup.sorted" }
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}" },
                mode: params.publish_dir_mode,
                pattern: '*.{bai,csi}',
                enabled: (
                    params.rnaseq_save_align_intermeds ||
                    params.rnaseq_with_umi ||
                    params.rnaseq_save_umi_intermeds
                )
            ]
        }

        withName: '.*:BAM_DEDUP_STATS_SAMTOOLS_UMITOOLS_GENOME:BAM_STATS_SAMTOOLS:.*' {
            ext.prefix = { "${meta.id}.umi_dedup.sorted.bam" }
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}/samtools_stats" },
                mode: params.publish_dir_mode,
                pattern: '*.{stats,flagstat,idxstats}'
            ]
        }
    }
}

process {
    withName: 'BEDTOOLS_GENOMECOV' {
        ext.args   = '-split -du'
        publishDir = [
            path: { "${params.outdir}/bedtools/${meta.id}" },
            enabled: false
        ]
    }

    withName: '.*:BEDGRAPH_BEDCLIP_BEDGRAPHTOBIGWIG_FORWARD:UCSC_BEDCLIP' {
        ext.prefix = { "${meta.id}.clip.forward" }
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}" },
            enabled: false
        ]
    }

    withName: '.*:BEDGRAPH_BEDCLIP_BEDGRAPHTOBIGWIG_FORWARD:UCSC_BEDGRAPHTOBIGWIG' {
        ext.prefix = { "${meta.id}.forward" }
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}/bigwig" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: '.*:BEDGRAPH_BEDCLIP_BEDGRAPHTOBIGWIG_REVERSE:UCSC_BEDCLIP' {
        ext.prefix = { "${meta.id}.clip.reverse" }
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}" },
            enabled: false
        ]
    }

    withName: '.*:BEDGRAPH_BEDCLIP_BEDGRAPHTOBIGWIG_REVERSE:UCSC_BEDGRAPHTOBIGWIG' {
        ext.prefix = { "${meta.id}.reverse" }
        publishDir = [
            path: { "${params.outdir}/${params.rnaseq_aligner}/bigwig" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }
}


if (!params.rnaseq_skip_stringtie) {
    process {
        withName: 'STRINGTIE_STRINGTIE' {
            ext.args   = [
                '-v',
                params.rnaseq_stringtie_ignore_gtf ? '' : '-e'
            ].join(' ').trim()
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}/stringtie" },
                mode: params.publish_dir_mode,
                saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
            ]
        }
    }
}


//
// STAR Salmon alignment options
//

if (params.rnaseq_aligner == 'star_salmon') {
    process {
        withName: '.*:ALIGN_STAR:STAR_ALIGN|.*:ALIGN_STAR:STAR_ALIGN_IGENOMES' {
            ext.args   = [
                '--quantMode TranscriptomeSAM',
                '--twopassMode Basic',
                '--outSAMtype BAM Unsorted',
                '--readFilesCommand zcat',
                '--runRNGseed 0',
                '--outFilterMultimapNmax 20',
                '--alignSJDBoverhangMin 1',
                '--outSAMattributes NH HI AS NM MD',
                '--quantTranscriptomeBan Singleend',
                '--outSAMstrandField intronMotif',
                params.save_unaligned ? '--outReadsUnmapped Fastx' : '',
                params.rnaseq_extra_star_align_args ? params.rnaseq_extra_star_align_args.split("\\s(?=--)") : ''
            ].flatten().unique(false).join(' ').trim()
            publishDir = [
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}/log" },
                    mode: params.publish_dir_mode,
                    pattern: '*.{out,tab}'
                ],
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}" },
                    mode: params.publish_dir_mode,
                    pattern: '*.bam',
                    enabled: params.rnaseq_save_align_intermeds
                ],
                [
                    path: { "${params.outdir}/${params.rnaseq_aligner}/unmapped" },
                    mode: params.publish_dir_mode,
                    pattern: '*.fastq.gz',
                    enabled: params.save_unaligned
                ]
            ]
        }

        withName: '.*:QUANTIFY_STAR_SALMON:SALMON_QUANT' {
            ext.args   = params.rnaseq_extra_salmon_quant_args ?: ''
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}" },
                mode: params.publish_dir_mode,
                saveAs: { filename -> filename.equals('versions.yml') || filename.endsWith('_meta_info.json') ? null : filename }
            ]
        }

        withName: '.*:QUANTIFY_STAR_SALMON:SALMON_TX2GENE' {
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}" },
                mode: params.publish_dir_mode,
                saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
            ]
        }

        withName: '.*:QUANTIFY_STAR_SALMON:SALMON_TXIMPORT' {
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}" },
                mode: params.publish_dir_mode,
                saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
            ]
        }

        withName: '.*:QUANTIFY_STAR_SALMON:SALMON_SE_.*' {
            publishDir = [
                path: { "${params.outdir}/${params.rnaseq_aligner}" },
                mode: params.publish_dir_mode,
                saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
            ]
        }
    }

    if (params.rnaseq_with_umi) {
        process {
            withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:SAMTOOLS_SORT' {
                ext.args   = '-n'
                ext.prefix = { "${meta.id}.umi_dedup.transcriptome" }
                publishDir = [
                    path: { "${params.outdir}/${params.rnaseq_aligner}" },
                    mode: params.publish_dir_mode,
                    pattern: '*.bam',
                    enabled: (
                        params.rnaseq_save_align_intermeds ||
                        params.rnaseq_save_umi_intermeds
                    )
                ]
            }

            withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:UMITOOLS_PREPAREFORSALMON' {
                ext.prefix = { "${meta.id}.umi_dedup.transcriptome.filtered" }
                publishDir = [
                    [
                        path: { "${params.outdir}/${params.rnaseq_aligner}/umitools/log" },
                        mode: params.publish_dir_mode,
                        pattern: '*.log'
                    ],
                    [
                        path: { "${params.outdir}/${params.rnaseq_aligner}" },
                        mode: params.publish_dir_mode,
                        pattern: '*.bam',
                        enabled: (
                            params.rnaseq_save_align_intermeds ||
                            params.rnaseq_save_umi_intermeds
                        )
                    ]
                ]
            }

            withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:BAM_SORT_STATS_SAMTOOLS:SAMTOOLS_SORT' {
                ext.prefix = { "${meta.id}.transcriptome.sorted" }
                publishDir = [
                    path: { "${params.outdir}/${params.rnaseq_aligner}" },
                    mode: params.publish_dir_mode,
                    pattern: '*.bam',
                    enabled: (
                        params.rnaseq_save_align_intermeds ||
                        params.rnaseq_save_umi_intermeds
                    )
                ]
            }

            withName: 'NFCORE_TFPRIO:TFPRIO:RNASEQ:BAM_SORT_STATS_SAMTOOLS:SAMTOOLS_INDEX' {
                publishDir = [
                    path: { "${params.outdir}/${params.rnaseq_aligner}" },
                    mode: params.publish_dir_mode,
                    pattern: '*.bai',
                    enabled: (
